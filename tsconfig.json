
  {
    "compilerOptions":{
      "target":"es6",
      "module":"commonjs",
      "lib":["esnext","dom"],
      "allowJs":true,
      "outDir":"dist",
      "rootDir":".",
      "removeComments":true,
      "strict":true,
      "noImplicitAny":true,
      "moduleResolution":"node",
      "baseUrl":".",
      "paths":{
          "@class/*": ["src/class/*"],
          "@config/*": ["src/config/*"],
          "@controllers/*": ["src/controllers/*"],
          "@interfaces/*": ["src/interfaces/*"],
          "@lib/*": ["src/lib/*"],
          "@routes/*": ["src/routes/*"],
          "@schemas/*": ["src/schemas/*"],
          "@test/*": ["src/test/*"],
          "@models/*": ["src/models/*"],
          "@src/*": ["src/*"]
      },
      "esModuleInterop":true,
      "experimentalDecorators":true,
      "emitDecoratorMetadata":true,
      "skipLibCheck":true,
      "forceConsistentCasingInFileNames":true
    },
    "exclude":["node_modules","dist","coverage"],
    "include":["src"]
  }
